# Check http://editorconfig.org for more information
# This is the main config file for this project:
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.py]
indent_style = space
indent_size = 4

[*.pyi]
indent_style = space
indent_size = 4

[{Makefile,Caddyfile}]
indent_style = tab

[*.md]
trim_trailing_whitespace = false
